extends ../layout.pug

block vars
	- var pageName = "The Official South Park Blog Page"

block content
	.blog-content
		.side-panel
			h3 Categories
			ul
				li #[a(href="#") News #[img(src="images/arrow.png")]]
				li #[a(href="#") Quotes #[img(src="images/arrow.png")]]
				li #[a(href="#") Memes #[img(src="images/arrow.png")]]
				li #[a(href="#") Episodes #[img(src="images/arrow.png")]]
				li #[a(href="#") FAQ #[img(src="images/arrow.png")]]
				li #[a(href="#") Fans]
				li #[a(href="#") Behind the Scenes #[img(src="images/arrow.png")]]
				li #[a(href="#") Interviews]


		.topics
			- var i = 1
			while i <= 3
				div.topic
					img(src="images/lepricon.jpg")
					div.topic-des
						h2 Happy Saint Patrick&#39;s Day!
						p Wear some green and pour yourself a double shot of these boozy South Park moments.
						button Read
				- i++

		.view-more
			button View more